%section#cart_items
  .container
    .breadcrumbs
      %ol.breadcrumb
        %li
          = link_to 'Home', root_path
        %li.active Shopping Cart
    .table-responsive.cart_info
      %table.table.table-condensed
        %thead
          %tr.cart_menu
            %td.image Item
            %td.description Description
            %td.price Price
            %td.quantity Quantity
            %td.total Total
            %td
        %tbody
          %tr
            %td.cart_product
              = link_to "" do
                = image_tag url_for(@main_image), alt: "", size: "120x100"
            %td.cart_description
              %h4
                %a(href="")= @product_cart.name
            %td.cart_price
              %p= "â‚¹#{@product_cart.price}"
            %td.cart_quantity
              .cart_quantity_button
                %a.cart_quantity_up(href="")+
                %input.cart_quantity_input(autocomplete="off" name="quantity" size="2" type="text" value="1")
                %a.cart_quantity_down(href="")-
            %td.cart_total
              %p.cart_total_price
            %td.cart_delete
              %a.cart_quantity_delete(href="")
                %i.fa.fa-times
= javascript_include_tag "cart"