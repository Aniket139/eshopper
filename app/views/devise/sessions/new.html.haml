%section#form
  .container
    .row
      .col-sm
        .login-form
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            %h2= t('devise.sessions.new.title')
            .login-wrap
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('devise.sessions.new.placeholder-email'), class: "input-wrapper"
              = f.password_field :password, autocomplete: "current-password", placeholder: t('devise.sessions.new.placeholder-password'), class: "input-wrapper"
            %span
              .remember
                - if devise_mapping.rememberable?
                  = f.check_box :remember_me, class: "checkbox"
                  = f.label :remember_me
              = link_to t('devise.shared.link.forgot'), new_password_path(resource_name)
            = f.button t('devise.sessions.new.btn-login'), type: "submit", class: "btn btn-default"
            %span
              .link
                = link_to t('devise.shared.link.sign-up'), new_registration_path(resource_name), class: "sign-up"
                = link_to t('devise.shared.link.confirmations'), new_confirmation_path(resource_name)
            -# = render "devise/shared/links"
- content_for :css_file do
  = stylesheet_link_tag 'devise/login', 'data-turbolinks-track': 'reload'