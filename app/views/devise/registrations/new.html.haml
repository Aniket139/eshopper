%section#form
  .container
    .row
      .col-sm-4
        .signup-form
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: resource
            %h2 Sign up
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email"
            = f.password_field :password, autocomplete: "new-password", placeholder: "new-password"
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm-password"
            = f.label :country_id
            = f.collection_select :country_id, Country.all, :id, :name
            = f.label :state_id 
            = f.grouped_collection_select :state_id, Country.all, :states, :name, :id, :name
            = f.label :city_id 
            = f.grouped_collection_select :city_id, State.all, :cities, :name, :id, :name 
            = render "devise/shared/links"






