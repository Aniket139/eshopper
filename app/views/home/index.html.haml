%section
  .container
    .row
      .col-sm-3
        .left-sidebar
          = render 'home/sidebar'
      // FEATURES ITEMS
      .col-sm-9.padding-right
        .features_items
          %h2.title.text-center Features Items
          - @products.each do |product|
            .col-sm-4
              .product-image-wrapper
                .single-products
                  .productinfo.text-center
                    - product.images.each do |image|
                      = image_tag url_for(image)
                    %h2 $#{product.price}
                    %p #{product.name}
                    = link_to "#", class: "btn btn-default add-to-cart" do
                      %i.fa.fa-shopping-cart
                      Add to cart
                  .product-overlay
                    .overlay-content
                      %h2 $#{product.price}
                      %p #{product.name}
                      = link_to "#", class: "btn btn-default add-to-cart" do
                        %i.fa.fa-shopping-cart
                        Add to cart
                .choose
                  %ul.nav.nav-pills.nav-justified
                    %li
                      = link_to show_product_path(product), class: "add-to-wishlist" do
                        = content_tag :i, "", class: "fa fa-eye"
                        show details
                    %li
                      = link_to "#", class: "add-to-compare" do
                        = content_tag :i, "", class: "fa fa-plus-square"
                        Add to compare
