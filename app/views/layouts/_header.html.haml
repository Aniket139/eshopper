%header#header
  / header
  .header_top
    / header_top
    .container
      .row
        .col-sm-6
          .contactinfo
            %ul.nav.nav-pills
              %li
                %a{href: "#"}
                  %i.fa.fa-phone
                  +2 95 01 88 821
              %li
                %a{href: "#"}
                  %i.fa.fa-envelope
                  info@domain.com
        .col-sm-6
          .social-icons.pull-right
            %ul.nav.navbar-nav
              %li
                %a{href: "#"}
                  %i.fa.fa-facebook
              %li
                %a{href: "#"}
                  %i.fa.fa-twitter
              %li
                %a{href: "#"}
                  %i.fa.fa-linkedin
              %li
                %a{href: "#"}
                  %i.fa.fa-dribbble
              %li
                %a{href: "#"}
                  %i.fa.fa-google-plus
  / /header_top
  .header-middle
    / header-middle
    .container
      .row
        .col-sm-4
          .logo.pull-left
            %a{href: "index.html"}
              = image_tag "home/logo"
          .btn-group.pull-right
            .btn-group
              %button.btn.btn-default.dropdown-toggle.usa{"data-toggle" => "dropdown", type: "button"}
                USA
                %span.caret
              %ul.dropdown-menu
                %li
                  %a{href: "#"} Canada
                %li
                  %a{href: "#"} UK
            .btn-group
              %button.btn.btn-default.dropdown-toggle.usa{"data-toggle" => "dropdown", type: "button"}
                DOLLAR
                %span.caret
              %ul.dropdown-menu
                %li
                  %a{href: "#"} Canadian Dollar
                %li
                  %a{href: "#"} Pound
        .col-sm-8
          .shop-menu.pull-right
            %ul.nav.navbar-nav
              %li
                - if current_customer
                  = link_to customer_path(id: current_customer.id) do
                    %i.fa.fa-user
                    Account
                - else
                  = link_to new_customer_session_path do
                    %i.fa.fa-user
                    Account
              %li
                %a{href: "#"}
                  %i.fa.fa-star
                  Wishlist
              %li
                %a{href: "checkout.html"}
                  %i.fa.fa-crosshairs
                  Checkout
              %li
                - if current_customer
                  = link_to carts_path(id: current_customer.id), class: 'position-absolute' do
                    %i.fa.fa-shopping-cart
                    Cart
                    -# %span.position-absolute.top-0.start-100.translate-middle.badge.rounded-pill.bg-danger 1
              %li
                - if current_customer.present?
                  %a{href: destroy_customer_session_path, 'data-method': 'delete'}
                    %i.fa.fa-power-off
                    Logout
                - else
                  = link_to new_customer_session_path do
                    %i.fa.fa-lock
                    Login
  / /header-middle
  .header-bottom
    / header-bottom
    .container
      .row
        .col-sm-9
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
          .mainmenu.pull-left
            %ul.nav.navbar-nav.collapse.navbar-collapse
              %li
                = link_to 'Home', root_path, class: ('active' if current_page?(root_path))
              %li
                = link_to 'Products', products_path, class: ('active' if current_page?(root_path))
              %li
                %a{href: "contact-us.html"} Contact
        .col-sm-3
          #search-product.search_box.pull-right
            = text_field_tag :name, params[:name], placeholder: "Search", type: "text", id: "search-input"
  / /header-bottom
/ /header
